---
import { blogList } from "../../utils/index";
import CardWidget from "@components/CardWidget.astro";
import FormattedDate from "@components/FormattedDate.astro";
---
<CardWidget widgetTitle="Latest Post">
	<div class="space-y-2">
		{blogList.slice(0,4).map( post =>
			<div class="pb-2">
				<h3 class="text-md font-medium"><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
				<div class="text-neutral-500"><FormattedDate date={post.data.pubDate} /></div>
			</div>
		)}
	</div>
</CardWidget>
